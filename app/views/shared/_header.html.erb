<div class='header'>
  <div class="logo span-16" >
    <a href="/">QFI Surveys</a>
  </div>
  <div class='login'>   
    <ul class="panel">  
    <% if logged_in? %>
      <li><%=link_to(t(:my_surveys), forms_path)%></li>
      <li><%=link_to(t(:account),account_path) %></li>
      <li><%= link_to(t(:logout), logout_path,:class=>'last') %></li>
    <% else %> 
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to t(:signup), signup_path %></li>
      <li><a href='/login' class='last'><span><%= t(:login) %></span></a></li> 
    <% end %>                                                     
     </ul>   
    <%= render :partial => '/shared/notice' %>
  </div>  
</div>
<% if logged_in? && current_user.temp? %>
<div">
  <%= t(:temp_account) %><%= link_to t(:create_real_account), signup_path,:class => 'ag' %>
</div>
<% end %>